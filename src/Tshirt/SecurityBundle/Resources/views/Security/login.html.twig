{# src/TShirt/SecurityBundle/Resources/views/Security/login.html.twig #}
{% extends 'TshirtSiteBundle::layout.html.twig' %}

{% block title %}T-Shirt Login{% endblock %}

{% block body %}
    <div class="main" style="margin-top:20px;">
        <div class="col-main">
            <div class="category-top">&nbsp;</div>
            <div class="one-page">
                <div class="page-title">
                    <h1>Login</h1>
                </div>
                <form action="{{ path('login_check') }}" method="post">
                    <label class="required" for="username"><strong>Username:</strong></label><br>
                    <input class="input-box" type="text" id="username" name="_username" value="{{ last_username }}" /><br>
                    <label class="required" for="password"><strong>Password:</strong></label><br>
                    <input class="input-box" type="password" id="password" name="_password" /><br><br>
                    <button class="button" type="submit"><span><span>Login</span></span></button>
                </form>
            </div>
            <div class="category-btm">&nbsp;</div>
        </div>
    </div>
{% endblock %}