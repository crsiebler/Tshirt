        <ul>
            <li class="home"><a title="Go to Home Page" href="{{ path('TshirtSiteBundle_homepage') }}">Home</a> <span>/ </span> </li>
            <li><strong>{{ title }}</strong> </li>
        </ul>
        </div>
        <div class="col-main">
        {#
        <div class="toolbar">
            <div class="t-right">&nbsp;</div>
            <div class="t-left">&nbsp;</div>
            <div class="tb">
            <div class="pager">
