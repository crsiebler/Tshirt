                    <option value="">12</option>
                    <option value="">18</option>
                </select>
                per page</div>
                -->
            </div>
            </div>
        </div>
        #}
        <div class="category-top">&nbsp;</div>
        <div class="category-products">
            <div class="page-title">
            <h1>{{ title }}</h1>
            </div>
            {% for image in images %}
                {% if 0 != loop.index % 2 %}
                    <ul class="products-grid first">
                    <li class="item first"><img width="216" height="216" alt="{{ image.path }}" src="{{ asset(image.getWebPath()) }}" />
                    </li>
                    {% if loop.last %}
                        <li class="clear"></li>
                        </ul>
                    {% endif %}
                {% else %}
                    <li class="item last"><img width="216" height="216" alt="{{ image.path }}" src="{{ asset(image.getWebPath()) }}" />
                    </li>
                    <li class="clear"></li>
                    </ul>
                {% endif %}
            {% endfor %}
        </div>
        <div class="category-btm">&nbsp;</div>
        </div>
    </div>
{% endblock %}